<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="background">
        <item name="backgroundColor">#1A1B22</item>
    </style>

    <style name="title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="s_maintext">
        <item name="android:textColor">#1A1B22</item>
    </style>

    <style name="s_secondarytext">
        <item name="android:textColor">#000000</item>
    </style>


    <style name="Widget.MaterialComponents.Button.UnelevatedButton.main_buttonstyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">16dp</item>
        <item name="iconSize">17dp</item>
        <item name="iconTint">?attr/colorSecondaryVariant</item>
        <item name="cornerRadius">@dimen/cornerRadius</item>
    </style>


    <style name="setings_activity_llbutton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/activity_settings_llheight</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="medialib_activity_tabs">
        <item name="android:textSize">14sp</item>
        <item name="tabTextColor">?attr/medialib_color</item>
        <item name="tabIndicatorColor"></item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="medialib_head">
        <item name="android:textColor">?attr/act_search_placeholder</item>
    </style>

    <style name="fragment_placeholder_text">
        <item name="android:textColor">?attr/medialib_color</item>
    </style>


</resources>