<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_button</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/pale_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_primary</item>
        <item name="colorSecondaryVariant">@color/pale_black</item>
        <item name="colorOnSecondary">@color/pale_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="activity_settings_head">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="settings_activity_viewtextstyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/secondarytext_size</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="activity_settings_viewback">
        <item name="android:background">@drawable/ic_baseline_arrow_back_24_night</item>
    </style>

    <style name="activity_search_ic">
        <item name="android:background">"@drawable/ic_search"</item>
    </style>

    <style name="activity_search_et">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">@color/pale_black</item>
    </style>

    <style name="activity_main_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">16dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/pale_black</item>
    </style>

</resources>