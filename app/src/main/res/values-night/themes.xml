<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_button</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/pale_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_primary</item>
        <item name="colorSecondaryVariant">@color/pale_black</item>
        <item name="colorOnSecondary">@color/pale_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="act_search_placeholder">@color/white</item>
        <item name="act_search_update">@color/pale_black</item>
    </style>

    <style name="activity_settings_head">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/tv_marginStart</item>
        <item name="android:layout_marginTop">@dimen/tv_marginTop</item>
    </style>

    <style name="settings_activity_viewtextstyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/second_text_size</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="activity_settings_viewback">
        <item name="android:layout_width">@dimen/icon_back_size</item>
        <item name="android:layout_height">@dimen/icon_back_size</item>
        <item name="android:layout_marginStart">@dimen/icon_back_size</item>
        <item name="android:background">@drawable/ic_baseline_arrow_back_24_night</item>
    </style>

    <style name="activity_search_ic">
        <item name="android:background">"@drawable/ic_search"</item>
    </style>

    <style name="activity_search_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textColorHint">@color/pale_black</item>
        <item name="android:textSize">@dimen/second_text_size</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginStart">9dp</item>
        <item name="android:layout_weight">9</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/search_name</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="activity_main_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">16dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/pale_black</item>
    </style>

    <style name="search_activity_sellsongname">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="search_activity_sellsongartist">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="search_activity_usearch">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="player_activity_artisttrackname">
        <item name="android:textColor">?attr/act_search_placeholder</item>
    </style>

    <style name="player_activity_playertime">
        <item name="android:textColor">?act_search_placeholder</item>
    </style>

    <style name="player_activity_textcolumn">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="player_activity_textcontent">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?act_search_placeholder</item>
    </style>

</resources>